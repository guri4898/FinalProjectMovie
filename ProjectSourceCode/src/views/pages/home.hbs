<style>
  body{
    background-color: #281543; 
  }
</style>

<form action="/home" method="POST" class="form-inline my-2 my-lg-0">
  <br>
  <div class="search-bar">
    <div class="row">
      <div class="col col-3">
      </div>
      <div class="col-7">
        <nav class="search-bar-1">
          <input class="form-control mr-sm-2" type="search" id="searchQ" name="searchQ" placeholder="Search"
            aria-label="Search">
        </nav>
      </div>
      <div class="col">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </div>
    </div>
  </div>
</form>

<br>
{{#if searchedTF}}
{{#if noData}}
<div class="position-absolute top-50 start-50 translate-middle">
  <h2>No Movies Found.</h2>
  <button type="button" class="btn btn-outline-secondary d-block mx-auto mt-3" onclick="window.location.href='/home'">Go
    Back</button>
</div>
{{else}}
<div class="container">
  <div class="row">
    {{#each movies}}
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card bg-dark text-white">
        <img src="{{image}}" class="card-img" alt="...">
      </div>
    </div>
    {{/each}}
  </div>
</div>
</div>
{{/if}}

{{else}}
<!-- Carousel code -->
<div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    {{#each movies}}
    <li data-bs-target="#movieCarousel" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}"></li>
    {{/each}}

  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    {{#each movies}}
    <div class="carousel-item {{#if @first}}active{{/if}}">
      <img src="{{this.imageUrl}}" class="d-block w-100" alt="{{this.title}}">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{this.title}}</h5>
        <p>{{this.summary}}</p>
      </div>
    </div>
    {{/each}}
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#movieCarousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#movieCarousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
