<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Movie Gallery</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
<style>
    body {
        background-color: #281543;
        color: #fff;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
    .sidebar {
        position: fixed;
        width: 200px; /* Adjusted width */
        height: 100vh;
        overflow-y: auto;
        background-color: #11091c;
        padding: 20px;
    }
    .carousel-item img {
    width: 100%; /* ensures the image is full width of the carousel */
    max-height: 70vh; /* limits the image height to 70% of the viewport height */
    object-fit: contain; /* ensure entire image is visible, might add letterboxing */
    background-color: #000; /* optional: sets a background color for the empty space */
}

.carousel {
    max-height: 80vh; /* max height for the carousel itself to ensure it fits in the viewport */
    overflow: hidden; /* hides any overflow caused by larger images */
}
.sidebar .btn {
    padding: 0.375rem 0.75rem; /* Smaller padding */
    font-size: 0.875rem; /* Smaller font size */
}
.carousel-caption {
    background-color: rgba(0, 0, 0, 0.5); /* Black background with 50% opacity */
    padding: 10px; /* Padding to ensure text doesn't touch the edges */
    border-radius: 5px; /* Optional: rounds the corners of the background */
}
    .main-content {
        margin-left: 200px; /* Space for sidebar */
        padding: 20px;
    }
    .search-bar form {
        display: flex;
        justify-content: center;
        margin-bottom: 35px;
        margin-left: 20px;
    }
    .search-bar input[type="search"], .search-bar button {
        flex: 2;
        margin-right: 15px;
    }
    .search-bar button {
        flex: .5; /* change size */
        margin-left: 15px;
    }
    .container {
        max-width: 960px;
        margin: auto;
    }
    .card {
        background-color: #333;
    }
    .card img {
        width: 100%;
        height: auto;
    }
    .carousel.slide {
        margin-top: 20px;
    }
</style>
</head>
<body>

<div class="sidebar">
    <h4>Filter</h4>
    <!-- Sidebar content like filters goes here -->
    {{> filter}}
</div>

<div class="main-content">
    <div class="search-bar">
        <form action="/home" method="POST">
            <input class="form-control mr-sm-2" type="search" id="searchQ" name="searchQ" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>

{{#if movies}}
<div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    {{#each movies}}
    <li data-bs-target="#movieCarousel" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}"></li>
    {{/each}}
  </ol>
  <div class="carousel-inner">
    {{#each movies}}
    <div class="carousel-item {{#if @first}}active{{/if}}">
        <a href="/movie/{{this.title}}">
      <img src="{{this.image}}" class="d-block w-100" alt="{{this.title}}">
        </a>

      <div class="carousel-caption d-none d-md-block">
        <h5>{{this.title}}</h5>
        <p>{{this.description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#movieCarousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#movieCarousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
{{else}}
<div style="text-align: center">
  <p>No movies to display</p>
</div>
{{/if}}

<script>
document.addEventListener("DOMContentLoaded", function() {
    const filterButtons = document.querySelectorAll('.filter-button'); // Assuming your filter buttons have a class 'filter-button'
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filterType = this.dataset.filterType; // Assume buttons have data attributes like 'data-filter-type="genre"'
            const filterValue = this.textContent.trim();

            fetch(`/filter-movies?${filterType}=${encodeURIComponent(filterValue)}`)
                .then(response => response.json())
                .then(movies => updateCarousel(movies))
                .catch(error => console.error('Error fetching movies:', error));
        });
    });

    function updateCarousel(movies) {
        const carouselInner = document.querySelector('.carousel-inner');
        const carouselIndicators = document.querySelector('.carousel-indicators');
        carouselInner.innerHTML = ''; // Clear existing slides
        carouselIndicators.innerHTML = ''; // Clear existing indicators

        movies.forEach((movie, index) => {
            const activeClass = index === 0 ? 'active' : '';
            carouselIndicators.innerHTML += `<li data-bs-target="#movieCarousel" data-bs-slide-to="${index}" class="${activeClass}"></li>`;

            carouselInner.innerHTML += `
                <div class="carousel-item ${activeClass}">
                    <img src="${movie.image}" class="d-block w-100" alt="${movie.title}">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>${movie.title}</h5>
                        <p>${movie.description}</p>
                    </div>
                </div>`;
        });

        // Reinitialize the carousel (needed if using Bootstrap JS to handle the carousel)
        if (window.bootstrap && window.bootstrap.Carousel) {
            const carouselElement = document.querySelector('#movieCarousel');
            const carouselInstance = new bootstrap.Carousel(carouselElement);
            carouselInstance.cycle();
        }
    }
});
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</body>
</html>
