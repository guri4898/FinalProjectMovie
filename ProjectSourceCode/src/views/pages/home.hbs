<style>
  body{
    background-color: #281543; 
    overflow: auto;
  }
  html{
  height: 100%;
  overflow-y: auto;  // Ensures you can scroll vertically
}
  .sidebar-header {
  padding: 10px;
  font-size: 20px;
  font-weight: bold;
}
.bg-light {
  background-color: #11091c !important;
  overflow-y: auto;
}

.sidebar-btn {
  width: 100%; /* Ensures buttons fill the sidebar */
  margin-bottom: 5px; /* Spacing between buttons */
}

.fixed-sidebar {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 250px; /* Fixed width */
  overflow-y: auto; /* Adds scroll to the sidebar if content is too long */
}
</style>

<form action="/home" method="POST" class="form-inline my-2 my-lg-0">
  <br>
  <div class="search-bar">
    <div class="row">
      <div class="col col-3">
      </div>
      <div class="col-7">
        <nav class="search-bar-1">
          <input class="form-control mr-sm-2" type="sea rch" id="searchQ" name="searchQ" placeholder="Search"
            aria-label="Search">
        </nav>
      </div>
      <div class="col">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </div>
    </div>
  </div>
</form>

<br>
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar Column -->
    <div class="col-md-3">
      <div class="p-3 bg-light" style="height: 100vh;width:200px; position: fixed;">
        <!-- Sidebar Content -->
        <h4 class="mb-3" style="color:white;">Filter </h4>

        <!-- Filter Category 1 -->
        <h5 class="mt-4" style="color:white;">Genre</h5>
        <button class="btn btn-outline-secondary my-2 w-100" type="button">Option 1</button>
        <button class="btn btn-outline-secondary my-2 w-100" type="button">Option 2</button>
        <button class="btn btn-outline-secondary my-2 w-100" type="button">Option 3</button>

        <!-- Filter Category 2 -->
        <h5 class="mt-4" style="color:white;">Year</h5>
        <button class="btn btn-outline-secondary my-2 w-100" type="button">Option 1</button>
        <button class="btn btn-outline-secondary my-2 w-100" type="button">Option 2</button>
        <button class="btn btn-outline-secondary my-2 w-100" type="button">Option 3</button>
      </div>
    </div>

        <div class="col-md-9 offset-md-3">

{{#if searchedTF}}
{{#if noData}}
<div class="position-absolute top-50 start-50 translate-middle">
  <h2>No Movies Found.</h2>
  <button type="button" class="btn btn-outline-secondary d-block mx-auto mt-3" onclick="window.location.href='/home'">Go
    Back</button>
</div>
{{else}}
<div class="container">
  <div class="row">
    {{#each movies}}
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card bg-dark text-white">
        <img src="{{image}}" class="card-img" alt="...">
      </div>
    </div>
    {{/each}}
  </div>
</div>
</div>
{{/if}}

{{else}}
<!-- Carousel code -->
<div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    {{#each movies}}
    <li data-bs-target="#movieCarousel" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}"></li>
    {{/each}}

  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    {{#each movies}}
    <div class="carousel-item {{#if @first}}active{{/if}}">
      <img src="{{this.imageUrl}}" class="d-block w-100" alt="{{this.title}}">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{this.title}}</h5>
        <p>{{this.summary}}</p>
      </div>
    </div>
    {{/each}}
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#movieCarousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#movieCarousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
