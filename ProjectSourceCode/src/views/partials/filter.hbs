<div class="sidebar">
  <!-- Genre Section -->
  <h4>
    <button class="btn btn-secondary btn-block mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#genreCollapse" aria-expanded="false" aria-controls="genreCollapse">
      Genre <i class="bi bi-chevron-down"></i>
    </button>
  </h4>
  <div class="collapse" id="genreCollapse">
    {{#each filterOptions.genres}}
      <!-- Updated buttons for genres -->
      <button class="btn btn-outline-secondary my-1 w-100 filter-button" type="button" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;" data-filter-type="genre" data-filter-value="{{this}}">
        {{this}}
      </button>
    {{else}}
      <p>No genres available.</p>
    {{/each}}
  </div>

  <!-- Year Section -->
  <h4>
    <button class="btn btn-secondary btn-block mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#yearCollapse" aria-expanded="false" aria-controls="yearCollapse">
      Year <i class="bi bi-chevron-down"></i>
    </button>
  </h4>
  <div class="collapse" id="yearCollapse">
    {{#each filterOptions.years}}
      <!-- Updated buttons for years -->
      <button class="btn btn-outline-secondary my-1 w-100 filter-button" type="button" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;" data-filter-type="year" data-filter-value="{{this}}">
        {{this}}
      </button>
    {{else}}
      <p>No years available.</p>
    {{/each}}
  </div>

  <!-- Director Section -->
  <h4>
    <button class="btn btn-secondary btn-block mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#directorCollapse" aria-expanded="false" aria-controls="directorCollapse">
      Director <i class="bi bi-chevron-down"></i>
    </button>
  </h4>
  <div class="collapse" id="directorCollapse">
    {{#each filterOptions.directors}}
      <!-- Updated buttons for directors -->
      <button class="btn btn-outline-secondary my-1 w-100 filter-button" type="button" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;" data-filter-type="director" data-filter-value="{{this}}">
        {{this}}
      </button>
    {{else}}
      <p>No directors available.</p>
    {{/each}}
  </div>
</div>